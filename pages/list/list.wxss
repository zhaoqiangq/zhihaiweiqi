/* pages/list/list.wxss */
page{
  height: 100%;
  background: #F3F3F3 url('http://www.zhaoxiaoqiang.com/images/seafood/webaa.jpg')no-repeat;
  background-size: 100%;
}
.null{
  position: fixed;
  top:300rpx;left: 0;right: 0;
  margin: auto;
  width: 100%;
  height: 300rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
}
.null image{
  width: 173rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  display: block;

}
.orderbox{
  padding-top: 34rpx;
  position: relative;
}
.orderbox::after{
  content: "";
  width: 100%;
  height: 172rpx;
  background: #19317B;
  position: absolute;
  top: 0;left: 0;
  z-index: -1;
  display: none;
}
.order{
  padding: 0 35rpx;
  box-sizing: border-box;
}
.order-item{
  width: 100%;
  background:url('http://www.zhaoxiaoqiang.com/images/seafood/item02.png') center top no-repeat ,
url('http://www.zhaoxiaoqiang.com/images/seafood/item01.png') center bottom no-repeat;
  background-size: 100% 17rpx;
  padding: 15rpx 0 8rpx 0;
  box-sizing: border-box;
  margin-bottom: 26rpx;
  border-radius: 5rpx;
}
.order-item .item-inner{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.order-item .item-inner .img{
  width: 165rpx;
  float: left;
  height: 100%;
  margin-right: 40rpx;
}
.order-item .item-inner .img image{
  width: 100%;
}
.msg{
  float: left;
  width: 300rpx;
}
.msg .h6{
  font-size: 30rpx;
  color: #333333;
  margin-top: 8rpx;
}
.msg .info{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}
.but{
  width: 80rpx;
  height: 150rpx;
  background: #19317B;
  border-radius: 12rpx;
  position: absolute;
  top:0;right: 30rpx;bottom: 0;
  margin: auto;
  color: #FFFFFF;
  text-align: center;
  padding-top: 23rpx;
  box-sizing: border-box;
  opacity: 0.5;
}
.but.active{
  opacity: 1;
}
.but navigator{
  position: absolute;
  top:0;left: 0;
  width: 80rpx;height: 150rpx;
  margin: auto;
}
.but text{
  writing-mode:tb-rl;
  font-size: 28rpx;

}
.clear{
  clear: both;
}
.more{
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size: 25rpx;
}

.showimg{
  position: fixed;
  top:0;left: 0;right: 0;bottom: 0;
  margin: auto;
  z-index: 99;
}
.showimg .showimgshadow{
  position: absolute;
  top:0;left: 0;right: 0;bottom: 0;
  margin: auto;
  background: rgba(0,0,0,0.7);
}
.showimg .showimginner{
  background: #fff;
  position: absolute;
  top:150rpx;left: 50rpx;right: 50rpx;bottom: 150rpx;
  margin: auto;
  border-radius: 10rpx;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  overflow: auto;
}
.showimgclose{
  position: absolute;
  top:15rpx;right: 15rpx;
  margin: auto;
  width: 42rpx;
  height: 43rpx;
}
.showimgclose image{
  width: 100%;
}
.showimg .showimginner image{
  width: 100%;
}